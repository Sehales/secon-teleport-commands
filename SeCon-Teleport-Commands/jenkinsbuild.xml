<?xml version="1.0" encoding="UTF-8"?>
<project name="Teleport-Command-Collection" default="jar" basedir=".">
<property environment="env"/>
<property name="buildname" value="${env.JOB_NAME}-BUILD_${env.BUILD_NUMBER}.jar"/>
<property name="build" value="bin" />
<property name="jar" value="jar" />
<property name="craftbukkit" value="lib/craftbukkit.jar" />

<target name="clean">
	<delete dir="${build}" />
	<delete dir="${jar}" />
	<delete file="${craftbukkit}" />
</target>

<target name="init" depends="clean">
	<mkdir dir="${build}" />
	<mkdir dir="${jar}" />
	<get src="http://dl.bukkit.org/latest-dev/craftbukkit-dev.jar" dest="${craftbukkit}"/>
</target>

<target name="compile" depends="init">

  <javac srcdir="src" destdir="${build}" includeantruntime="false" target="1.6" source="1.6" debug="true" debuglevel="lines,vars,source">
    <classpath>
      <pathelement location="lib/craftbukkit.jar" />
      <pathelement location="lib/secon.jar" />
    </classpath>
  </javac>

</target>

<target name="jar" depends="compile">

  <jar basedir="${build}" destfile="jar/${buildname}">
    <fileset dir="res" includes="addon.yml" />
  </jar>

</target>

</project>